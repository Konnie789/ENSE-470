<div class="row my-3">
    <div class="col-xs-12 mx-auto">
        <h2>Create a new Software Request</h2>
    </div>
</div>

<div id="application-spinner" class="spinner"></div>

<div id="application" class="row">
    <div class="col-lg-6 mx-auto">
        <div class="form-group">
            <label for="software-select">Software:</label>
            <input type="text" class="form-control" id="software-select">
        </div>
        <div class="form-group">
            <label for="reason">Reason for application:</label>
            <textarea id="reason" class="form-control"></textarea>
        </div>
        
        <button id="submit" class="btn btn-primary float-right">Submit</button>
        <button id="clear" class="btn btn-link float-right">Clear</button>
    </div>
</div>

<script src="/js/create-application.js"></script>

<style>
    #application-spinner {
        position: absolute;
        left: 50%;
        z-index: 9999;
    }
</style>
